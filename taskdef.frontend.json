{
  "family": "livekit-app-frontend-taskdef",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::497816397337:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::497816397337:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "497816397337.dkr.ecr.ap-south-1.amazonaws.com/livekit-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_LIVEKIT_API_KEY",
          "value": "YOUR_LIVEKIT_API_KEY_HERE"
        },
        {
          "name": "NEXT_PUBLIC_LIVEKIT_API_SECRET",
          "value": "YOUR_LIVEKIT_API_SECRET_HERE"
        }
      ]
    }
  ]
}
